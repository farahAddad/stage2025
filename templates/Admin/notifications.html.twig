<script>
// Fonction pour marquer une notification comme lue
function marquerCommeLue(notificationId) {
    fetch(`/admin/notification/marquer-lue/${notificationId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Mettre Ã  jour l'interface
            const notificationItem = document.querySelector(`[data-notification-id="${notificationId}"]`);
            if (notificationItem) {
                notificationItem.classList.remove('unread');
                notificationItem.classList.add('read');
                notificationItem.querySelector('.badge').remove();
                notificationItem.querySelector('.btn-outline-success').remove();
            }
            
            // Mettre Ã  jour le compteur
            updateNotificationCount();
            
            // Recharger la page pour mettre Ã  jour les statistiques
            setTimeout(() => {
                location.reload();
            }, 1000);
        }
    })
    .catch(error => {
        console.error('Erreur:', error);
        alert('Erreur lors du marquage de la notification');
    });
}

// Fonction pour marquer toutes les notifications comme lues
function marquerToutesLues() {
    if (confirm('ÃŠtes-vous sÃ»r de vouloir marquer toutes les notifications comme lues ?')) {
        fetch('/admin/notifications/marquer-toutes-lues', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Toutes les notifications ont Ã©tÃ© marquÃ©es comme lues');
                location.reload();
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
            alert('Erreur lors du marquage des notifications');
        });
    }
}

// Fonction pour filtrer les notifications
function filterNotifications() {
    const typeFilter = document.getElementById('typeFilter').value;
    const statusFilter = document.getElementById('statusFilter').value;
    const searchInput = document.getElementById('searchInput').value.toLowerCase();
    
    const notifications = document.querySelectorAll('.notification-item');
    
    notifications.forEach(notification => {
        const type = notification.dataset.type;
        const status = notification.dataset.status;
        const content = notification.dataset.content;
        
        let show = true;
        
        // Filtre par type
        if (typeFilter && type !== typeFilter) {
            show = false;
        }
        
        // Filtre par statut
        if (statusFilter && status !== statusFilter) {
            show = false;
        }
        
        // Filtre par recherche
        if (searchInput && !content.includes(searchInput)) {
            show = false;
        }
        
        notification.style.display = show ? 'block' : 'none';
    });
}

