<!-- BEGIN: Body-->

<body class="vertical-layout vertical-overlay-menu 2-columns fixed-navbar" data-open="click" data-menu="vertical-overlay-menu" data-col="2-columns">

{% include 'User/navBar.html.twig' %}

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">Détails de l'inscription</h3>
                <p class="text-muted">Confirmez votre participation à cette session</p>
            </div>
        </div>
        
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Session de formation</h4>
                            <div class="card-tools">
                                {% set session = inscription.session %}
                                {% set formation = session.formation %}
                                {% set sessionStatus = session.status %}
                                {% set displayStatus = inscription.statutParticipation %}
                                {% if (inscription.statutParticipation == 'en attente' or not inscription.statutParticipation) and sessionStatus in ['en cours', 'terminée', 'annulée'] %}
                                    {% set displayStatus = 'absence de validation' %}
                                {% endif %}
                                
                                <span class="badge badge-{% if displayStatus == 'en attente' %}warning{% elseif displayStatus == 'accepté' %}success{% elseif displayStatus == 'absence de validation' %}danger{% else %}secondary{% endif %}">
                                    {{ displayStatus|title }}
                                </span>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Formation</h5>
                                        <p><strong>{{ formation.sujet }}</strong></p>
                                        
                                        <h5>Session</h5>
                                        <p><strong>{{ session.titre }}</strong></p>
                                        
                                        <h5>Dates</h5>
                                        <p>
                                            <strong>Début :</strong> {{ session.dateDebut|date('d/m/Y H:i') }}<br>
                                            <strong>Fin :</strong> {{ session.dateFin|date('d/m/Y H:i') }}
                                        </p>
                                        
                                        <h5>Lieu</h5>
                                        <p>
                                            {% if session.salle %}
                                                {{ session.salle.nom }}
                                            {% else %}
                                                {{ session.emplacement }}
                                            {% endif %}
                                        </p>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <h5>Responsable</h5>
                                        <p>
                                            {% if formation.responsable %}
                                                {{ formation.responsable.prenom }} {{ formation.responsable.nom }}
                                            {% else %}
                                                Non assigné
                                            {% endif %}
                                        </p>
                                        
                                      
                                    </div>
                                </div>
                                
                                <hr>
                                
                             
                                
                                {% set sessionStatus = session.status %}
                                {% set canValidate = (inscription.statutParticipation == 'en attente' or not inscription.statutParticipation) and sessionStatus == 'créée' %}
                                
                                {% if canValidate %}
                                    <hr>
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <h5>Validez votre participation</h5>
                                            <p class="text-muted">Veuillez confirmer votre participation à cette session</p>
                                            
                                            <button type="button" class="btn btn-success btn-lg accepter-inscription" data-id="{{ inscription.id }}">
                                                <i class="icon-check"></i> Valider ma participation
                                            </button>
                                        </div>
                                    </div>
                                {% else %}
                                    <hr>
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            {% if inscription.statutParticipation == 'accepté' %}
                                                <div class="alert alert-success">
                                                    <h5><i class="icon-check"></i> Participation validée</h5>
                                                    {% if inscription.dateValidation %}
                                                        <p class="mb-0">Validé le {{ inscription.dateValidation|date('d/m/Y H:i') }}</p>
                                                    {% endif %}
                                                </div>
                                            {% elseif sessionStatus in ['en cours', 'terminée', 'annulée'] and (inscription.statutParticipation == 'en attente' or not inscription.statutParticipation) %}
                                                <div class="alert alert-danger">
                                                    <h5><i class="icon-x"></i> Absence de validation</h5>
                                                    <p class="mb-0">Vous n'avez pas validé votre participation à temps. La session est maintenant {{ sessionStatus }}.</p>
                                                </div>
                                            {% else %}
                                                <div class="alert alert-secondary">
                                                    <h5><i class="icon-info"></i> Statut : {{ inscription.statutParticipation|default('en attente')|title }}</h5>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->



<!-- BEGIN: Vendor JS-->
<script src="../../../app-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
<!-- BEGIN Vendor JS-->

<!-- BEGIN: Theme JS-->
<script src="../../../app-assets/js/core/app-menu.js" type="text/javascript"></script>
<script src="../../../app-assets/js/core/app.js" type="text/javascript"></script>
<!-- END: Theme JS-->

<script>
$(document).ready(function() {
    // Accepter l'inscription
    $('.accepter-inscription').click(function() {
        var id = $(this).data('id');
        var button = $(this);
        
        if (confirm('Êtes-vous sûr de vouloir valider votre participation à cette session ?')) {
            button.prop('disabled', true).html('<i class="icon-spinner"></i> Traitement...');
            
            $.ajax({
                url: '/user/inscription/' + id + '/accepter',
                method: 'POST',
                success: function(response) {
                    if (response.success) {
                        // Recharger la page pour afficher le nouveau statut
                        location.reload();
                    } else {
                        alert('Erreur : ' + response.message);
                        button.prop('disabled', false).html('<i class="icon-check"></i> Valider ma participation');
                    }
                },
                error: function() {
                    alert('Erreur lors du traitement');
                    button.prop('disabled', false).html('<i class="icon-check"></i> Valider ma participation');
                }
            });
        }
    });
    

});
</script>



</body>
<!-- END: Body-->

</html> 