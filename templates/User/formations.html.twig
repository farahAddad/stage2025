<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">Mes Formations</h3>
                <p class="text-muted">Consultez toutes vos formations</p>
            </div>
        </div>
        
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste de mes formations</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                {% if inscriptions is empty %}
                                    <div class="text-center py-4">
                                        <i class="icon-book-open font-large-2 text-muted"></i>
                                        <h5 class="mt-2">Aucune formation</h5>
                                        <p class="text-muted">Vous n'êtes inscrit à aucune formation pour le moment.</p>
                                    </div>
                                {% else %}
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Formation</th>
                                                    <th>Session</th>
                                                    <th>Date de début</th>
                                                    <th>Date de fin</th>
                                                    <th>Statut</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for inscription in inscriptions %}
                                                    {% set session = inscription.session %}
                                                    {% set formation = session.formation %}
                                                    <tr>
                                                        <td>
                                                            <strong>{{ formation.sujet }}</strong>
                                                            {% if formation.description %}
                                                                <br><small class="text-muted">{{ formation.description|slice(0, 100) }}...</small>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <span class="badge badge-info">{{ session.titre }}</span>
                                                        </td>
                                                        <td>
                                                            {{ session.dateDebut|date('d/m/Y H:i') }}
                                                        </td>
                                                        <td>
                                                            {{ session.dateFin|date('d/m/Y H:i') }}
                                                        </td>
                                                        <td>
                                                            {% set status = session.status ?: 'créée' %}
                                                            {% if status == 'créée' %}
                                                                <span class="badge badge-info">{{ status|capitalize }}</span>
                                                            {% elseif status == 'en cours' %}
                                                                <span class="badge badge-warning">{{ status|capitalize }}</span>
                                                            {% elseif status == 'terminé' %}
                                                                <span class="badge badge-success">{{ status|capitalize }}</span>
                                                            {% elseif status == 'annulée' %}
                                                                <span class="badge badge-danger">{{ status|capitalize }}</span>
                                                            {% else %}
                                                                <span class="badge badge-secondary">{{ status|capitalize }}</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <a href="{{ path('user_sessions') }}" class="btn btn-sm btn-primary">
                                                                <i class="icon-eye"></i> Voir détails
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
