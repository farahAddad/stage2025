<!-- BEGIN: Body-->

<body class="vertical-layout vertical-overlay-menu 2-columns fixed-navbar" data-open="click" data-menu="vertical-overlay-menu" data-col="2-columns">

{% include 'User/navBar.html.twig' %}

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
       
        
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <!-- En-tête de la page -->
                    <div class="text-center mb-4">
                        <h2 class="text-success">
                            <i class="fas fa-check-circle"></i> 
                            Évaluation Enregistrée avec Succès !
                        </h2>
                        <p class="text-muted">Votre évaluation a été sauvegardée</p>
                    </div>

                    <!-- Informations de la session -->
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                <i class="fas fa-graduation-cap text-info"></i> 
                                Détails de la Formation
                            </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Formation :</strong> {{ formation.sujet }}</p>
                                        <p><strong>Session :</strong> {{ session.titre }}</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Date :</strong> {{ session.dateDebut|date('d/m/Y') }}</p>
                                        <p><strong>Horaires :</strong> {{ session.dateDebut|date('H:i') }} - {{ session.dateFin|date('H:i') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Résultats de l'évaluation -->
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                <i class="fas fa-chart-bar text-success"></i> 
                                Résultats de Mon Évaluation
                            </h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="row">
                                    <!-- Note globale -->
                                    <div class="col-md-4 mb-3">
                                        <div class="text-center">
                                            <h6>Note Globale</h6>
                                            <div class="rating-display">
                                                {% for i in 1..5 %}
                                                    <span class="rating-number {% if i <= evaluation.noteGlobale %}active{% endif %}">
                                                        {{ i }}
                                                    </span>
                                                {% endfor %}
                                            </div>
                                                                                         <p class="mt-2">
                                                 <strong>{{ evaluation.noteGlobale }}/5</strong>
                                             </p>
                                        </div>
                                    </div>

                                    <!-- Note de clarté -->
                                    <div class="col-md-4 mb-3">
                                        <div class="text-center">
                                            <h6>Clarté du Contenu</h6>
                                            <div class="rating-display">
                                                {% for i in 1..5 %}
                                                    <span class="rating-number {% if i <= evaluation.clarte %}active{% endif %}">
                                                        {{ i }}
                                                    </span>
                                                {% endfor %}
                                            </div>
                                            <p class="mt-2">
                                                <strong>{{ evaluation.clarte }}/5</strong>
                                            </p>
                                        </div>
                                    </div>

                                    <!-- Note de pertinence -->
                                    <div class="col-md-4 mb-3">
                                        <div class="text-center">
                                            <h6>Pertinence</h6>
                                            <div class="rating-display">
                                                {% for i in 1..5 %}
                                                    <span class="rating-number {% if i <= evaluation.pertinence %}active{% endif %}">
                                                        {{ i }}
                                                    </span>
                                                {% endfor %}
                                            </div>
                                            <p class="mt-2">
                                                <strong>{{ evaluation.pertinence }}/5</strong>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Suggestion -->
                                {% if evaluation.suggestion %}
                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <h6><i class="fas fa-comment text-primary"></i> Ma Suggestion :</h6>
                                            <div class="alert alert-info">
                                                <p class="mb-0">{{ evaluation.suggestion }}</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->



<!-- BEGIN: Vendor JS-->
<script src="/app-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
<!-- END: Vendor JS-->

<!-- BEGIN: Theme JS-->
<script src="/app-assets/js/core/app-menu.js" type="text/javascript"></script>
<script src="/app-assets/js/core/app.js" type="text/javascript"></script>
<!-- END: Theme JS-->

<!-- Styles pour l'affichage des notes -->
<style>
.rating-display {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin: 10px 0;
}

.rating-number {
    display: inline-block;
    width: 35px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    border-radius: 50%;
    background-color: #e9ecef;
    color: #6c757d;
    font-weight: bold;
    font-size: 14px;
}

.rating-number.active {
    background-color: #28a745;
    color: white;
}

.btn-block {
    width: 100%;
}
</style>

</body>
<!-- END: Body-->

</html> 