{% extends 'base.html.twig' %}

{% block title %}Détails Évaluation - Responsable{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- En-tête de la page -->
            <div class="text-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-eye text-info"></i> 
                    Détails de l'Évaluation
                </h2>
                <p class="text-muted">Consultez les détails complets de cette évaluation</p>
            </div>

            <!-- Informations de la session -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-graduation-cap"></i> 
                        Détails de la Formation
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Formation :</strong> {{ formation.sujet }}</p>
                            <p><strong>Session :</strong> {{ session.titre }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Date :</strong> {{ session.dateDebut|date('d/m/Y') }}</p>
                            <p><strong>Horaires :</strong> {{ session.dateDebut|date('H:i') }} - {{ session.dateFin|date('H:i') }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informations du participant -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user"></i> 
                        Informations du Participant
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Nom :</strong> {{ user.nom }}</p>
                            <p><strong>Prénom :</strong> {{ user.prenom }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Email :</strong> {{ user.email }}</p>
                            <p><strong>Rôle :</strong> 
                                {% for role in user.roles %}
                                    <span class="badge bg-secondary">{{ role }}</span>
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Résultats de l'évaluation -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-bar"></i> 
                        Résultats de l'Évaluation
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Note globale -->
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <h6>Note Globale</h6>
                                <div class="rating-display">
                                    {% for i in 1..5 %}
                                        <span class="rating-number {% if i <= evaluation.noteGlobale %}active{% endif %}">
                                            {{ i }}
                                        </span>
                                    {% endfor %}
                                </div>
                                <p class="mt-2">
                                    <strong>{{ evaluation.noteGlobale }}/5</strong>
                                </p>
                                <small class="text-muted">
                                    {% if evaluation.noteGlobale <= 2 %}
                                        Très insatisfait
                                    {% elseif evaluation.noteGlobale == 3 %}
                                        Moyen
                                    {% else %}
                                        Très satisfait
                                    {% endif %}
                                </small>
                            </div>
                        </div>

                        <!-- Clarté -->
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <h6>Clarté des Explications</h6>
                                <div class="rating-display">
                                    {% for i in 1..5 %}
                                        <span class="rating-number {% if i <= evaluation.clarte %}active{% endif %}">
                                            {{ i }}
                                        </span>
                                    {% endfor %}
                                </div>
                                <p class="mt-2">
                                    <strong>{{ evaluation.clarte }}/5</strong>
                                </p>
                                <small class="text-muted">
                                    {% if evaluation.clarte <= 2 %}
                                        Très confus
                                    {% elseif evaluation.clarte == 3 %}
                                        Assez clair
                                    {% else %}
                                        Très clair
                                    {% endif %}
                                </small>
                            </div>
                        </div>

                        <!-- Pertinence -->
                        <div class="col-md-4 mb-3">
                            <div class="text-center">
                                <h6>Pertinence du Contenu</h6>
                                <div class="rating-display">
                                    {% for i in 1..5 %}
                                        <span class="rating-number {% if i <= evaluation.pertinence %}active{% endif %}">
                                            {{ i }}
                                        </span>
                                    {% endfor %}
                                </div>
                                <p class="mt-2">
                                    <strong>{{ evaluation.pertinence }}/5</strong>
                                </p>
                                <small class="text-muted">
                                    {% if evaluation.pertinence <= 2 %}
                                        Pas pertinent
                                    {% elseif evaluation.pertinence == 3 %}
                                        Assez pertinent
                                    {% else %}
                                        Très pertinent
                                    {% endif %}
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Suggestions -->
                    {% if evaluation.suggestion %}
                        <div class="mt-4">
                            <h6>Suggestions et Commentaires du Participant</h6>
                            <div class="alert alert-light">
                                <i class="fas fa-comment text-primary"></i>
                                {{ evaluation.suggestion }}
                            </div>
                        </div>
                    {% endif %}

                    <!-- Actions disponibles -->
            </div>
            <div class="card shadow mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> 
                        Actions Disponibles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a href="{{ path('responsable_evaluations_list') }}" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-arrow-left"></i> 
                                Retour à la Liste
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="{{ path('responsable_evaluations_stats') }}" class="btn btn-outline-info btn-block">
                                <i class="fas fa-chart-pie"></i> 
                                Voir Statistiques
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="{{ path('responsable_evaluations_export_csv') }}" class="btn btn-outline-success btn-block">
                                <i class="fas fa-download"></i> 
                                Export CSV
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles pour l'affichage des notes -->
<style>
.rating-display {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin: 10px 0;
}

.rating-number {
    display: inline-block;
    width: 35px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    border-radius: 50%;
    background-color: #e9ecef;
    color: #6c757d;
    font-weight: bold;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.rating-number.active {
    background-color: #ffc107;
    color: #212529;
    box-shadow: 0 2px 8px rgba(255, 193, 7, 0.4);
    transform: scale(1.1);
}

.card {
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.card-header {
    border-bottom: none;
}

.btn-block {
    width: 100%;
}

.badge {
    font-size: 0.8rem;
}
</style>
{% endblock %}
