{% extends 'base.html.twig' %}

{% block title %}Statistiques des Évaluations - Responsable{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- En-tête de la page -->
            <div class="text-center mb-4">
                <h2 class="text-primary">
                    <i class="fas fa-chart-pie text-info"></i> 
                    Statistiques des Évaluations
                </h2>
                <p class="text-muted">Analysez les performances et la satisfaction des participants</p>
            </div>

            <!-- Statistiques globales -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-star fa-3x mb-3"></i>
                            <h3 class="mb-0">{{ moyenneGlobale|number_format(1) }}/5</h3>
                            <p class="mb-0">Note Moyenne Globale</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-lightbulb fa-3x mb-3"></i>
                            <h3 class="mb-0">{{ moyenneClarte|number_format(1) }}/5</h3>
                            <p class="mb-0">Clarté Moyenne</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white text-center">
                        <div class="card-body">
                            <i class="fas fa-target fa-3x mb-3"></i>
                            <h3 class="mb-0">{{ moyennePertinence|number_format(1) }}/5</h3>
                            <p class="mb-0">Pertinence Moyenne</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Répartition des notes -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-warning text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-bar"></i> 
                                Répartition des Notes Globales
                            </h5>
                        </div>
                        <div class="card-body">
                            {% for note in 1..5 %}
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-warning text-dark me-2">{{ note }}</span>
                                        <span>Étoile(s)</span>
                                    </div>
                                    <div class="progress flex-grow-1 mx-3" style="height: 25px;">
                                        {% set pourcentage = repartitionNotes[note] is defined ? (repartitionNotes[note] / totalEvaluations * 100) : 0 %}
                                        <div class="progress-bar bg-warning" 
                                             role="progressbar" 
                                             style="width: {{ pourcentage }}%"
                                             aria-valuenow="{{ pourcentage }}" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            {{ repartitionNotes[note] is defined ? repartitionNotes[note] : 0 }}
                                        </div>
                                    </div>
                                    <span class="badge bg-secondary">{{ pourcentage|number_format(1) }}%</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-line"></i> 
                                Analyse des Critères
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Clarté -->
                            <div class="mb-3">
                                <h6>Clarté des Explications</h6>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1 me-3">
                                        <div class="progress" style="height: 20px;">
                                            {% set pourcentageClarte = (moyenneClarte / 5) * 100 %}
                                            <div class="progress-bar bg-success" 
                                                 role="progressbar" 
                                                 style="width: {{ pourcentageClarte }}%"
                                                 aria-valuenow="{{ pourcentageClarte }}" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                {{ moyenneClarte|number_format(1) }}/5
                                            </div>
                                        </div>
                                    </div>
                                    <span class="badge bg-success">{{ pourcentageClarte|number_format(1) }}%</span>
                                </div>
                            </div>

                            <!-- Pertinence -->
                            <div class="mb-3">
                                <h6>Pertinence du Contenu</h6>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1 me-3">
                                        <div class="progress" style="height: 20px;">
                                            {% set pourcentagePertinence = (moyennePertinence / 5) * 100 %}
                                            <div class="progress-bar bg-info" 
                                                 role="progressbar" 
                                                 style="width: {{ pourcentagePertinence }}%"
                                                 aria-valuenow="{{ pourcentagePertinence }}" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                {{ moyennePertinence|number_format(1) }}/5
                                            </div>
                                        </div>
                                    </div>
                                    <span class="badge bg-info">{{ pourcentagePertinence|number_format(1) }}%</span>
                                </div>
                            </div>

                            <!-- Note globale -->
                            <div class="mb-3">
                                <h6>Note Globale</h6>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1 me-3">
                                        <div class="progress" style="height: 20px;">
                                            {% set pourcentageGlobale = (moyenneGlobale / 5) * 100 %}
                                            <div class="progress-bar bg-primary" 
                                                 role="progressbar" 
                                                 style="width: {{ pourcentageGlobale }}%"
                                                 aria-valuenow="{{ pourcentageGlobale }}" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                {{ moyenneGlobale|number_format(1) }}/5
                                            </div>
                                        </div>
                                    </div>
                                    <span class="badge bg-primary">{{ pourcentageGlobale|number_format(1) }}%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Graphiques et visualisations -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-area"></i> 
                                Visualisation des Données
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <canvas id="notesChart" width="400" height="200"></canvas>
                                </div>
                                <div class="col-md-6">
                                    <canvas id="criteriaChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions disponibles -->
            <div class="card shadow mt-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs"></i> 
                        Actions Disponibles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a href="{{ path('responsable_evaluations_list') }}" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-list"></i> 
                                Liste des Évaluations
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="{{ path('responsable_evaluations_export_csv') }}" class="btn btn-outline-success btn-block">
                                <i class="fas fa-download"></i> 
                                Export CSV
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="{{ path('responsable_formations') }}" class="btn btn-outline-info btn-block">
                                <i class="fas fa-graduation-cap"></i> 
                                Retour Formations
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Styles personnalisés -->
<style>
.card {
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

.card-header {
    border-bottom: none;
}

.progress {
    border-radius: 10px;
}

.progress-bar {
    border-radius: 10px;
}

.badge {
    font-size: 0.9rem;
}

.btn-block {
    width: 100%;
}

canvas {
    max-width: 100%;
    height: auto !important;
}
</style>

<!-- Scripts pour les graphiques -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Graphique des notes
    const notesCtx = document.getElementById('notesChart').getContext('2d');
    new Chart(notesCtx, {
        type: 'bar',
        data: {
            labels: ['1 étoile', '2 étoiles', '3 étoiles', '4 étoiles', '5 étoiles'],
            datasets: [{
                label: 'Nombre d\'évaluations',
                data: [
                    {{ repartitionNotes[1] is defined ? repartitionNotes[1] : 0 }},
                    {{ repartitionNotes[2] is defined ? repartitionNotes[2] : 0 }},
                    {{ repartitionNotes[3] is defined ? repartitionNotes[3] : 0 }},
                    {{ repartitionNotes[4] is defined ? repartitionNotes[4] : 0 }},
                    {{ repartitionNotes[5] is defined ? repartitionNotes[5] : 0 }}
                ],
                backgroundColor: [
                    '#dc3545',
                    '#fd7e14',
                    '#ffc107',
                    '#20c997',
                    '#198754'
                ],
                borderColor: [
                    '#dc3545',
                    '#fd7e14',
                    '#ffc107',
                    '#20c997',
                    '#198754'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                title: {
                    display: true,
                    text: 'Répartition des Notes Globales'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            }
        }
    });

    // Graphique des critères
    const criteriaCtx = document.getElementById('criteriaChart').getContext('2d');
    new Chart(criteriaCtx, {
        type: 'radar',
        data: {
            labels: ['Note Globale', 'Clarté', 'Pertinence'],
            datasets: [{
                label: 'Moyennes',
                data: [
                    {{ moyenneGlobale }},
                    {{ moyenneClarte }},
                    {{ moyennePertinence }}
                ],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 2,
                pointBackgroundColor: 'rgba(54, 162, 235, 1)',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: 'rgba(54, 162, 235, 1)'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                title: {
                    display: true,
                    text: 'Comparaison des Critères'
                }
            },
            scales: {
                r: {
                    beginAtZero: true,
                    max: 5,
                    ticks: {
                        stepSize: 1
                    }
                }
            }
        }
    });
});
</script>
{% endblock %}
