<script>
$(document).ready(function() {
    // Marquer notification comme lue
    $('.marquer-lue').click(function() {
        var id = $(this).data('id');
        var button = $(this);
        
        $.ajax({
            url: '/responsable/notification/marquer-lue/' + id,
            method: 'POST',
            success: function(response) {
                if (response.success) {
                    button.closest('.list-group-item').fadeOut();
                }
            }
        });
    });
});
</script>

