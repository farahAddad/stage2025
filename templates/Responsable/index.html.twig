<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <h3 class="content-header-title">Dashboard Responsable</h3>
                <p class="text-muted">Bienvenue {{ user.prenom }} {{ user.nom }}</p>
            </div>
        </div>
        
        <div class="content-body">
            <!-- Statistiques -->
            <div class="row">
                <div class="col-xl-3 col-md-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3 class="primary">{{ totalFormations }}</h3>
                                        <span>Mes Formations</span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="icon-book-open primary font-large-2 float-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3 class="warning">{{ formationsEnCours }}</h3>
                                        <span>En Cours</span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="icon-clock warning font-large-2 float-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3 class="success">{{ formationsTerminees }}</h3>
                                        <span>Terminées</span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="icon-check success font-large-2 float-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3 class="info">{{ countNonLues }}</h3>
                                        <span>Notifications</span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="icon-bell info font-large-2 float-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mes Formations -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Mes Formations Responsable</h4>
                            <div class="card-tools">
                                <a href="{{ path('ajouter_formation') }}" class="btn btn-primary btn-sm">
                                    <i class="icon-plus"></i> Créer une formation
                                </a>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                {% if formations is empty %}
                                    <div class="text-center py-4">
                                        <i class="icon-book-open font-large-2 text-muted"></i>
                                        <h5 class="mt-2">Aucune formation</h5>
                                        <p class="text-muted">Vous n'êtes responsable d'aucune formation pour le moment.</p>
                                        <a href="{{ path('ajouter_formation') }}" class="btn btn-primary">
                                            <i class="icon-plus"></i> Créer ma première formation
                                        </a>
                                    </div>
                                {% else %}
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Sujet</th>
                                                    <th>Date de début</th>
                                                    <th>Durée</th>
                                                    <th>Sessions</th>
                                                    <th>Statut</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for formation in formations %}
                                                    <tr>
                                                        <td>
                                                            <strong>{{ formation.sujet }}</strong>
                                                        </td>
                                                        <td>
                                                            {% if formation.dateDebut %}
                                                                {{ formation.dateDebut|date('d/m/Y') }}
                                                            {% else %}
                                                                <span class="text-muted">Non définie</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if formation.duree %}
                                                                {{ formation.duree }} jour(s)
                                                            {% else %}
                                                                <span class="text-muted">Non définie</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <span class="badge badge-info">{{ formation.sessions|length }} session(s)</span>
                                                        </td>
                                                        <td>
                                                            {% set hasActiveSessions = false %}
                                                            {% for session in formation.sessions %}
                                                                {% if session.dateFin > date() %}
                                                                    {% set hasActiveSessions = true %}
                                                                {% endif %}
                                                            {% endfor %}
                                                            {% if hasActiveSessions %}
                                                                <span class="badge badge-warning">En cours</span>
                                                            {% else %}
                                                                <span class="badge badge-success">Terminée</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <a href="{{ path('liste_formations') }}" class="btn btn-sm btn-primary">
                                                                <i class="icon-eye"></i> Voir
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notifications Récentes -->
            {% if notifications is not empty %}
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Notifications Récentes</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <div class="list-group">
                                    {% for notification in notifications|slice(0, 5) %}
                                        <div class="list-group-item list-group-item-action">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">{{ notification.titre }}</h6>
                                                <small class="text-muted">{{ notification.dateCreation|date('d/m/Y H:i') }}</small>
                                            </div>
                                            <p class="mb-1">{{ notification.message }}</p>
                                            <button class="btn btn-sm btn-outline-primary marquer-lue" data-id="{{ notification.id }}">
                                                Marquer comme lue
                                            </button>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="text-center mt-3">
                                    <a href="{{ path('responsable_notifications') }}" class="btn btn-primary">
                                        Voir toutes les notifications
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
<!-- END: Content-->

