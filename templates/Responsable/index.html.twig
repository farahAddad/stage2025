                    <a class="navbar-brand" href="/responsable/">
                        <h2 class="brand-text">Espace Responsable</h2>
                    </a>
                </li>
            </ul>
        </div>
        <div class="navbar-container content">
            <div class="collapse navbar-collapse" id="navbar-mobile">
                <ul class="nav navbar-nav mr-auto float-left">
                    <li class="nav-item d-none d-md-block">
                        <a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#">
                            <i class="ft-menu"></i>
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav float-right">
                    <li class="nav-item dropdown dropdown-notification">
                        <a class="nav-link nav-link-label" href="#" data-toggle="dropdown">
                            <i class="ficon ft-bell"></i>
                            {% if countNonLues > 0 %}
                                <span class="badge badge-pill badge-default badge-danger badge-default badge-up">{{ countNonLues }}</span>
                            {% endif %}
                        </a>
                        <div class="dropdown-menu dropdown-menu-media dropdown-menu-right">
                            <div class="dropdown-menu-header">
                                <h6 class="dropdown-header m-0">
                                    <span class="grey darken-2">Notifications</span>
                                </h6>
                            </div>
                            <div class="dropdown-menu-body">
                                {% if notifications is empty %}
                                    <p class="text-center p-2">Aucune notification</p>
                                {% else %}
                                    {% for notification in notifications|slice(0, 5) %}
                                        <a class="dropdown-item" href="{{ path('responsable_notifications') }}">
                                            <div class="media">
                                                <div class="media-left align-self-center">
                                                    <i class="ft-bell icon-bg-circle bg-cyan"></i>
                                                </div>
                                                <div class="media-body">
                                                    <h6 class="media-heading">{{ notification.titre }}</h6>
                                                    <p class="notification-text font-small-3 text-muted">{{ notification.message }}</p>
                                                    <small>
                                                        <time class="media-meta text-muted">{{ notification.dateCreation|date('d/m/Y H:i') }}</time>
                                                    </small>
                                                </div>
                                            </div>
                                        </a>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <div class="dropdown-menu-footer">
                                <a class="dropdown-item text-muted text-center" href="{{ path('responsable_notifications') }}">Voir toutes les notifications</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item dropdown dropdown-user">
                        <a class="nav-link dropdown-toggle link" data-toggle="dropdown">
                            <span class="user-name">{{ user.prenom }} {{ user.nom }}</span>
                            <i class="ft-user"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="{{ path('responsable_formations') }}">
                                <i class="ft-book-open"></i> Mes Formations
                            </a>
                            <a class="dropdown-item" href="{{ path('ajouter_formation') }}">
                                <i class="ft-plus"></i> Créer Formation
                            </a>
                            <a class="dropdown-item" href="{{ path('responsable_notifications') }}">
